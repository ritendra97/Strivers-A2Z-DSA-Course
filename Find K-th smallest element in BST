package BinarySearchTree;


public class FindKthsmallestelementinBST {

    public static void main(String[] args) {
        
    }

    public static int kLargesSmall(Node root, int k) {
        
    }


    public static int kLargesSmallUtills(Node root, int k, int count[]) {
        
        if(root==null) return -1;

        int left = kLargesSmallUtills(root.left, k, count);

        if(left!=-1) return left;

        count[0]++;

        if(count[0]==k) return root.val;

        int right = kLargesSmallUtills(root.right, k, count);

        return right;
    }
}
